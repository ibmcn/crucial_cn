function site_menu() {
  $items['选购顾问'] = array(
    //'title' => t('Crucial 选购顾问'),
    'title' => '<none>',
    'page callback' => '_get_selector_page',
    'type' => MENU_CALLBACK,
    'access callback' => TRUE,
  );
  $items['fetchJsonData'] = array(
    'title' => t('Json data'),
    'page callback' => '_get_json_conversion',
    'type' => MENU_CALLBACK,
    'access callback' => TRUE,
  );
  return $items;
}

function _get_json_conversion() {
	if(!empty($_GET["act"]) && !empty($_GET["id"])) {
		$url = 'http://commentwall-1.shopmodule.jaeapp.com/crucial/ajax.php?act='.$_GET["act"].'&id='.$_GET["id"];
		$dom_html = file_get_contents($url);

    $dom = new DOMDocument();

    $dom->loadHTML($dom_html);
    $xpath = new DOMXPath($dom);

    $divContent = $xpath->query('//*[@id="taeapp-commentwall_2_crucial_ajax_php"]')->item(0);
    $json_data = strip_tags($divContent->nodeValue);
    $json_string = trim($json_data);
    echo $json_string;
    exit();
	}
	else {
		echo t('Invalid URL arguments');
	}
}

