function site_block_info() {
  // This example comes from node.module.
  $blocks['filter_block'] = array(
    'info' => t('filter block'),
    'cache' => DRUPAL_NO_CACHE,
  );

  return $blocks;
}

function site_block_view($delta = '') {
	$block = array();
	switch ($delta) {
	    case 'filter_block':
